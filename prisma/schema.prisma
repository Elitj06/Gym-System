// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// AUTENTICAÇÃO (NextAuth.js)
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String
  image         String?
  role          String    @default("receptionist") // admin, instructor, receptionist
  employeeId    String?   @unique
  employee      Employee? @relation(fields: [employeeId], references: [id])
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================
// MODELOS DE NEGÓCIO
// ============================================

// Modelo de Planos
model Plan {
  id          String   @id @default(cuid())
  name        String
  price       Decimal  @db.Decimal(10, 2)
  duration    Int      // Duração em dias (30, 90, 365)
  description String?
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  members     Member[]

  @@map("plans")
}

// Modelo de Membros
model Member {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  cpf           String    @unique
  phone         String
  birthDate     DateTime
  gender        String    // 'M', 'F', 'Outro'
  photoUrl      String?
  address       String?
  city          String?
  state         String?
  zipCode       String?
  
  // Dados da Matrícula
  enrollmentDate DateTime  @default(now())
  status        String    @default("active") // active, inactive, suspended
  planId        String
  plan          Plan      @relation(fields: [planId], references: [id])
  
  // Pagamento
  paymentDay    Int       // Dia do mês para pagamento (1-31)
  lastPayment   DateTime?
  nextPayment   DateTime?
  
  // Biometria e Acesso
  biometricId   String?   @unique
  accessPin     String?
  
  // Auditoria
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  payments      Payment[]
  accessLogs    AccessLog[]

  @@map("members")
}

// Modelo de Funcionários
model Employee {
  id          String   @id @default(cuid())
  name        String
  email       String   @unique
  cpf         String   @unique
  phone       String
  birthDate   DateTime
  photoUrl    String?
  
  // Dados Profissionais
  role        String   // 'admin', 'instructor', 'receptionist', 'cleaner'
  salary      Decimal  @db.Decimal(10, 2)
  hireDate    DateTime
  status      String   @default("active") // active, inactive, on_vacation
  
  // Credenciais
  accessPin   String?
  permissions String[] // Array de permissões
  
  // Auditoria
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  schedules        Schedule[]
  user             User?
  attendances      Attendance[]
  score            EmployeeScore?
  faceRecognition  FaceRecognition?

  @@map("employees")
}

// Modelo de Pagamentos
model Payment {
  id          String   @id @default(cuid())
  memberId    String
  member      Member   @relation(fields: [memberId], references: [id])
  
  amount      Decimal  @db.Decimal(10, 2)
  dueDate     DateTime
  paidAt      DateTime?
  status      String   @default("pending") // pending, paid, overdue, cancelled
  
  method      String?  // cash, credit_card, debit_card, pix, bank_transfer
  reference   String?  // Número do comprovante/transação
  notes       String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("payments")
}

// Modelo de Logs de Acesso
model AccessLog {
  id          String   @id @default(cuid())
  memberId    String
  member      Member   @relation(fields: [memberId], references: [id])
  
  checkIn     DateTime @default(now())
  checkOut    DateTime?
  
  method      String   // 'biometric', 'pin', 'card', 'manual'
  location    String?  // Área da academia
  
  createdAt   DateTime @default(now())

  @@map("access_logs")
}

// Modelo de Horários de Aulas
model Schedule {
  id          String   @id @default(cuid())
  name        String   // Nome da aula/atividade
  description String?
  
  instructorId String
  instructor   Employee @relation(fields: [instructorId], references: [id])
  
  dayOfWeek   Int      // 0-6 (Domingo-Sábado)
  startTime   String   // HH:MM
  endTime     String   // HH:MM
  
  maxCapacity Int
  location    String   // Sala/Área
  
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("schedules")
}

// Modelo de Equipamentos
model Equipment {
  id          String   @id @default(cuid())
  name        String
  area        String   // Ex: 'Cardio', 'Musculação Livre'
  status      String   @default("active") // active, warning, maintenance
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  maintenances Maintenance[]

  @@map("equipments")
}

// Modelo de Manutenção
model Maintenance {
  id          String   @id @default(cuid())
  equipmentId String
  equipment   Equipment @relation(fields: [equipmentId], references: [id])
  
  description String
  date        DateTime
  nextDate    DateTime?
  status      String   @default("scheduled") // scheduled, completed, cancelled
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("maintenances")
}

// Modelo de Controle de Ponto (Facial Recognition)
model Attendance {
  id           String   @id @default(cuid())
  employeeId   String
  employee     Employee @relation(fields: [employeeId], references: [id])
  
  checkIn      DateTime @default(now())
  checkOut     DateTime?
  
  // Reconhecimento Facial
  faceConfidence Float?  // Confiança da detecção (0-100%)
  faceImageUrl String?   // URL da imagem capturada
  
  // Localização
  location     String?   // Ex: "Recepção", "Área de Musculação"
  
  // Status
  status       String   @default("present") // present, absent, late, left_early
  isLate       Boolean  @default(false)
  minutesLate  Int?
  
  notes        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([employeeId, checkIn])
  @@map("attendances")
}

// Modelo de Score de Desempenho dos Funcionários
model EmployeeScore {
  id          String   @id @default(cuid())
  employeeId  String   @unique
  employee    Employee @relation(fields: [employeeId], references: [id])
  
  // Scores individuais (0-100)
  punctualityScore      Float  @default(100) // Baseado em pontualidade
  customerServiceScore  Float  @default(100) // Baseado em avaliações de clientes
  hoursScore            Float  @default(100) // Baseado em horas trabalhadas vs esperadas
  
  // Score geral (média ponderada)
  overallScore          Float  @default(100)
  
  // Estatísticas
  totalDaysWorked       Int    @default(0)
  totalLateArrivals     Int    @default(0)
  totalEarlyLeaves      Int    @default(0)
  totalAbsences         Int    @default(0)
  totalHoursWorked      Float  @default(0)
  
  // Período de avaliação
  evaluationPeriod      String @default("monthly") // daily, weekly, monthly, yearly
  lastEvaluatedAt       DateTime @default(now())
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("employee_scores")
}

// Modelo de Dados Faciais (para reconhecimento)
model FaceRecognition {
  id          String   @id @default(cuid())
  employeeId  String   @unique
  employee    Employee @relation(fields: [employeeId], references: [id])
  
  // Embeddings faciais (vector de 128 ou 512 dimensões)
  faceEmbedding String   // JSON string do vetor
  
  // Múltiplas imagens de treino
  trainingImages String[] // URLs das imagens de treino
  
  // Metadata
  lastTrainedAt DateTime @default(now())
  isActive      Boolean  @default(true)
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("face_recognitions")
}
